@model MyTvSeries.Web.Models.Home.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
    int i = 1;
}

<div class="container-fluid">
    <h1>Welcome to MyTvSeries</h1>
    <h2>Top series</h2>
    <h2></h2>
    @foreach (var series in Model.Series)
    {
        {i++;}
        @if(i % 2 == 0)
        {
            i = 0;
            <h2 class="invisible">break</h2>
        }
        <div class="col-md-6">
            @if (series.PosterContent != null)
            {
                <div class="col-md-3">
                    <img src="data:image;base64,@System.Convert.ToBase64String(series.PosterContent)" alt="~/images/no-image-available.png" class="img-fluid" width="100" height="125" />
                </div>
            }
            <div class="col-md-6"><a asp-controller="Series" asp-action="Details" asp-route-id="@series.Id">@series.Name</a></div>
            <div class="col-md-2">@series.UserRating</div>
        </div>
    }
</div>
