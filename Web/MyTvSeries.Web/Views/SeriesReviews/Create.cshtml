@model MyTvSeries.Web.Models.Review.ReviewCreateViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Write review</h2>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" rows="8" cols="40" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
            <input asp-for="SeriesId" type="hidden" />
        </form>
    </div>
</div>

<div>
    <a asp-controller="Series" asp-action="Details" asp-route-id="@Model.SeriesId">Back to Series</a>
</div>

